@model FinalProgramacionII.Models.Entidade
@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm("Create", "Home", FormMethod.Post)){
     <div class="border-bottom box-shadow d-flex justify-content-between">
        <h1>Insertar Nuevo Registro</h1>
        <div style="padding-right: 1rem;">
            <input type="submit" value="Guardar" class="btn btn-success"/>
        </div>
    </div>
        <br/>
        <div class="d-flex justify-content-around">
            <div class="card" style="width: 25rem;">
          <div class="card-header">
            Informacion Documentos
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Fecha Registro:</b>  @Html.EditorFor(d => d.FechaRegistro)</li>
            <li class="list-group-item"><b>Tipo Entidad:</b>
            @Html.DropDownListFor(d => d.TipoEntidad, new List<SelectListItem>{
                new SelectListItem{Text="Físicas", Value="Físicas"},
                new SelectListItem{Text="Juridica", Value="Juridica"}
            })
            </li>
            <li class="list-group-item"><b>Tipo Documento:</b> 
                @Html.DropDownListFor(d => d.TipoDocumento, new List<SelectListItem>{
                new SelectListItem{Text="RNC", Value="RNC"},
                new SelectListItem{Text="Cedula", Value="Cedula"},
                new SelectListItem{Text="Pasaporte", Value="Pasaporte"},
            })
            </li>
            <li class="list-group-item"><b>Numero Documento:</b>  @Html.EditorFor(d => d.NumeroDocumento)</li>
            <li class="list-group-item">@Html.ValidationMessageFor(d => d.NumeroDocumento, null, new {@class = "text-danger"})</li>
          </ul>
        </div>
        <br/>
        <div class="card" style="width: 35rem;">
          <div class="card-header">
            Informacion Direccion
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Direccion:</b>  @Html.EditorFor(d => d.Direccion)</li>
            <li class="list-group-item">@Html.ValidationMessageFor(d => d.Direccion, null, new {@class = "text-danger"})</li>
            <li class="list-group-item"><b>Localidad:</b>  @Html.EditorFor(d => d.Localidad)</li>
            <li class="list-group-item">@Html.ValidationMessageFor(d => d.Localidad, null, new {@class = "text-danger"})</li>
            <li class="list-group-item"><b>Codigo Postal:</b>  @Html.EditorFor(d => d.CodigoPostal)</li>
            <li class="list-group-item"><b>Coordenadas GPS:</b>  @Html.EditorFor(d => d.CoordenadasGps)</li>
          </ul>
        </div>
        <br/>
        <div class="card" style="width: 20rem;">
          <div class="card-header">
            Credenciales
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Username:</b>  @Html.EditorFor(d => d.UserNameEntidad)</li>
            <li class="list-group-item">@Html.ValidationMessageFor(d => d.UserNameEntidad, null, new {@class = "text-danger"})</li>
            <li class="list-group-item"><b>Password:</b>  @Html.EditorFor(d => d.PasswordEntidad)</li>
            <li class="list-group-item">@Html.ValidationMessageFor(d => d.PasswordEntidad, null, new {@class = "text-danger"})</li>
            <li class="list-group-item"><b>Rol:</b> 
                @Html.DropDownListFor(d => d.RolUserEntidad, new List<SelectListItem>{
                new SelectListItem{Text="Admin", Value="Admin"},
                new SelectListItem{Text="Supervisor", Value="Supervisor"},
                new SelectListItem{Text="User", Value="User"},
            })
            </li>
          </ul>
        </div>
    </div>
    <br/>
    <div class="d-flex justify-content-start gap-1">
        <div class="card" style="width: 30rem;">
          <div class="card-header">
            Informacion Contacto
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Telefono:</b>  @Html.EditorFor(d => d.Telefonos)</li>
            <li class="list-group-item">@Html.ValidationMessageFor(d => d.Telefonos, null, new {@class = "text-danger"})</li>
            <li class="list-group-item"><b>WebPage:</b>  @Html.EditorFor(d => d.UrlpaginaWeb)</li>
            <li class="list-group-item"><b>Facebook:</b>  @Html.EditorFor(d => d.Urlfacebook)</li>
            <li class="list-group-item"><b>Instagram:</b>  @Html.EditorFor(d => d.Urlinstagram)</li>
            <li class="list-group-item"><b>TikTok:</b>  @Html.EditorFor(d => d.UrltikTok)</li>
            <li class="list-group-item"><b>Twitter:</b>  @Html.EditorFor(d => d.Urltwitter)</li>
            </ul>
        </div>
        <br/>
        <div class="card" style="width: 40rem;">
          <div class="card-header">
            Informacion Extra
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Limite Credito:</b>  @Html.EditorFor(d => d.LimiteCredito)</li>
            <li class="list-group-item">@Html.ValidationMessageFor(d => d.LimiteCredito, null, new {@class = "text-danger"})</li>
            <li class="list-group-item"><b>Descripcion:</b>  @Html.EditorFor(d => d.Descripcion)</li>
            <li class="list-group-item">@Html.ValidationMessageFor(d => d.Descripcion, null, new {@class = "text-danger"})</li>
            <li class="list-group-item"><b>Comentario:</b>  @Html.EditorFor(d => d.Comentario)</li>
            <li class="list-group-item"><b>Status:</b> 
                @Html.DropDownListFor(d => d.Status, new List<SelectListItem>{
                new SelectListItem{Text="Activo", Value="Activo"},
                new SelectListItem{Text="Inactivo", Value="Inactivo"},
            })</li>
            <li class="list-group-item"><b>Eliminable:</b>  @Html.EditorFor(d => d.NiEliminable)</li>
          </ul>
    </div>
</div>
}
